{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "color": {
      "custom": true,
      "defaultPalette": false,
      "defaultGradients": false,
      "palette": [
        {
          "slug": "background",
          "color": "#faf8f5",
          "name": "Background"
        },
        {
          "slug": "foreground",
          "color": "#2d2a2e",
          "name": "Foreground"
        },
        {
          "slug": "pink",
          "color": "#ff6188",
          "name": "Pink"
        },
        {
          "slug": "orange",
          "color": "#fc9867",
          "name": "Orange"
        },
        {
          "slug": "yellow",
          "color": "#ffd866",
          "name": "Yellow"
        },
        {
          "slug": "green",
          "color": "#a9dc76",
          "name": "Green"
        },
        {
          "slug": "cyan",
          "color": "#78dce8",
          "name": "Cyan"
        },
        {
          "slug": "purple",
          "color": "#ab9df2",
          "name": "Purple"
        },
        {
          "slug": "surface-inset",
          "color": "#f0ede8",
          "name": "Surface Inset"
        },
        {
          "slug": "surface-raised",
          "color": "#ffffff",
          "name": "Surface Raised"
        },
        {
          "slug": "muted",
          "color": "#727072",
          "name": "Muted"
        }
      ]
    },
    "typography": {
      "fluid": true,
      "customFontSize": true,
      "fontFamilies": [
        {
          "fontFamily": "'JetBrains Mono', ui-monospace, SFMono-Regular, 'SF Mono', Menlo, Consolas, monospace",
          "slug": "primary",
          "name": "JetBrains Mono"
        }
      ],
      "fontSizes": [
        {
          "size": "0.75rem",
          "slug": "small",
          "name": "Small"
        },
        {
          "size": "1rem",
          "slug": "medium",
          "name": "Medium"
        },
        {
          "size": "1.125rem",
          "slug": "large",
          "name": "Large"
        },
        {
          "size": "1.5rem",
          "slug": "x-large",
          "name": "Extra Large"
        },
        {
          "size": "2rem",
          "slug": "xx-large",
          "name": "2X Large"
        },
        {
          "size": "2.5rem",
          "slug": "huge",
          "name": "Huge"
        }
      ]
    },
    "layout": {
      "contentSize": "75ch",
      "wideSize": "90ch"
    },
    "spacing": {
      "units": ["px", "em", "rem", "%", "vh", "vw"],
      "spacingScale": {
        "steps": 7
      }
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "shadow": {
      "presets": [
        {
          "name": "Raised 1",
          "slug": "raised-1",
          "shadow": "0 2px 8px rgba(0,0,0,0.08), 0 0 0 1px rgba(0,0,0,0.04)"
        },
        {
          "name": "Raised 2",
          "slug": "raised-2",
          "shadow": "0 8px 24px rgba(0,0,0,0.12), 0 0 0 1px rgba(0,0,0,0.06)"
        },
        {
          "name": "Inset",
          "slug": "inset",
          "shadow": "inset 0 2px 4px rgba(0,0,0,0.06)"
        }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--foreground)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--primary)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "1.7"
    },
    "spacing": {
      "padding": {
        "top": "0",
        "right": "var(--wp--preset--spacing--40)",
        "bottom": "0",
        "left": "var(--wp--preset--spacing--40)"
      }
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--pink)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--cyan)"
          }
        },
        ":focus": {
          "outline": {
            "color": "var(--wp--preset--color--cyan)",
            "style": "solid",
            "width": "2px",
            "offset": "2px"
          }
        }
      },
      "heading": {
        "typography": {
          "fontWeight": "600",
          "lineHeight": "1.3"
        },
        "color": {
          "text": "var(--wp--preset--color--foreground)"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--huge)"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xx-large)"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)"
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--pink)",
          "text": "#ffffff"
        },
        "border": {
          "radius": "0.5rem"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--purple)"
          }
        }
      }
    },
    "blocks": {
      "core/code": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--primary)",
          "fontSize": "var(--wp--preset--font-size--small)"
        },
        "color": {
          "background": "var(--wp--preset--color--surface-inset)",
          "text": "var(--wp--preset--color--foreground)"
        },
        "border": {
          "radius": "0.5rem"
        },
        "spacing": {
          "padding": {
            "top": "var(--wp--preset--spacing--40)",
            "right": "var(--wp--preset--spacing--50)",
            "bottom": "var(--wp--preset--spacing--40)",
            "left": "var(--wp--preset--spacing--50)"
          }
        }
      },
      "core/preformatted": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--primary)",
          "fontSize": "var(--wp--preset--font-size--small)"
        },
        "color": {
          "background": "var(--wp--preset--color--surface-inset)"
        },
        "border": {
          "radius": "0.5rem"
        },
        "spacing": {
          "padding": {
            "top": "var(--wp--preset--spacing--40)",
            "right": "var(--wp--preset--spacing--50)",
            "bottom": "var(--wp--preset--spacing--40)",
            "left": "var(--wp--preset--spacing--50)"
          }
        }
      },
      "core/quote": {
        "border": {
          "left": {
            "color": "var(--wp--preset--color--purple)",
            "style": "solid",
            "width": "4px"
          }
        },
        "spacing": {
          "padding": {
            "left": "var(--wp--preset--spacing--50)"
          }
        },
        "typography": {
          "fontStyle": "italic"
        }
      },
      "core/image": {
        "border": {
          "radius": "0.75rem"
        }
      },
      "core/separator": {
        "color": {
          "background": "var(--wp--preset--color--muted)"
        },
        "border": {
          "radius": "2px"
        }
      }
    }
  }
}
